{
  "name": "jolanda",
  "version": "1.0.0",
  "description": "> *\"Vidím velký špatný, ale i velký dobrý...\"*",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "rimraf dist",
    "build": "electron-builder --win --linux",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:deb": "electron-builder --linux deb"
  },
  "author": {
    "name": "Ladislav Jaromír Pleštil",
    "email": "topsoil.talent.7g@icloud.com"
  },
  "build": {
    "appId": "com.jolanda.app",
    "productName": "Jolanda",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Games"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ladislavpl/jolanda.git"
  },
  "keywords": [],
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ladislavpl/jolanda/issues"
  },
  "homepage": "https://github.com/ladislavpl/jolanda#readme",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}